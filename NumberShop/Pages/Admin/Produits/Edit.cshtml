@page
@model NumberShop.Pages.Admin.Produits.EditModel

@{
    ViewData["Title"] = "Editer";
}

<h1>@ViewData["Title"]</h1>

<h4>Produits</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Parfum.ParfumId" />
            <div class="form-group">
                <label asp-for="Parfum.nom" class="control-label"></label>
                <input asp-for="Parfum.nom" class="form-control" />
                <span asp-validation-for="Parfum.nom" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Parfum.prix" class="control-label"></label>
                <input asp-for="Parfum.prix" class="form-control" />
                <span asp-validation-for="Parfum.prix" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Parfum.description" class="control-label"></label>
                <input asp-for="Parfum.description" class="form-control" />
                <span asp-validation-for="Parfum.description" class="text-danger"></span>
            </div>

            <select  asp-for="Parfum.Categorie" class="form-group"  aria-label="multiple select example">
                @foreach(var categorie in Model.categories)
                {
                    @if(Model.Parfum.Categorie == categorie.CategorieName)
                    {
                        <option selected  value="@categorie.CategorieName">@categorie.CategorieName</option>
                    }
                    else
                    {
                        <option   value="@categorie.CategorieName">@categorie.CategorieName</option>
                    }
                }   
            </select>

            <input type="file"  name="ajoutimage" id="ajoutimgproduit" />
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
